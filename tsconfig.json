{
	"extends": "@vue/tsconfig/tsconfig.json",
	"compilerOptions": {
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./src/*"],
			"@api/*": ["./src/api/*"],
			"@pages/*": ["./src/pages/*"],
			"@router/*": ["./src/router/*"],
			"@static/*": ["./src/static/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@server/*": ["./src/server/*"],
			"@stores/*": ["./src/stores/*"],
			"@styles/*": ["./src/styles/*"],
			"@utils/*": ["./src/utils/*"]
		},
		"lib": ["esnext", "dom"],
		"types": ["@dcloudio/types"]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
